Execute (VIM.unlet):
  ruby << RB
    assert_equal true,  VIM.exists?('g:goodbye')
    assert_equal true,  VIM.exists?('g:howdy')
    VIM.unlet 'g:goodbye', 'g:howdy'
    assert_equal false, VIM.exists?('g:goodbye')
    assert_equal false, VIM.exists?('g:howdy')
  RB

